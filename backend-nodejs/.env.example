# Baby Tracking API - Environment Configuration
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env file to version control!

# ============================================
# Server Configuration
# ============================================
PORT=3000
NODE_ENV=development

# ============================================
# Database Configuration (Oracle)
# ============================================

DB_SERVER=babyapp-sql-server.database.windows.net
DB_NAME=babyapp_db
DB_USER=sqladmin
DB_PASSWORD=Edinburgh25
DB_ENCRYPT=true

# ============================================
# JWT Configuration
# ============================================
JWT_SECRET=your_secret_key_minimum_32_characters_for_production
JWT_EXPIRATION=24h
JWT_REFRESH_SECRET=your_refresh_secret_key
JWT_REFRESH_EXPIRATION=7d

# ============================================
# API Configuration
# ============================================
API_VERSION=v1
API_BASE_URL=http://localhost:3000/api/v1

# ============================================
# Logging
# ============================================
LOG_LEVEL=debug
